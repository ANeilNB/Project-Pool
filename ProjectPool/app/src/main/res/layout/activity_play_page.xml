<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainPage"
    android:id="@+id/">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Queue"
        android:id="@+id/joinQueue"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/leaveQueue"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave Queue"
        android:id="@+id/leaveQueue"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/leaderboard"
        android:layout_alignEnd="@+id/leaderboard"
        android:layout_alignLeft="@+id/leaderboard"
        android:layout_alignStart="@+id/leaderboard" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:id="@+id/leaderboard"
        android:layout_below="@+id/leaveQueue"
        android:layout_marginTop="39dp"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backButton"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/leaderboard"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
